<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="dustin.diaz.comp4400.controller.AdminHomeController">
    <center>
        <VBox alignment="CENTER" minHeight="800.0" minWidth="1000.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Welcome, ">
                            <font>
                                <Font size="27.0"/>
                            </font>
                        </Label>
                        <Label fx:id="userLabel" text="&lt;admin_user&gt;" textFill="RED">
                            <font>
                                <Font size="27.0"/>
                            </font>
                        </Label>
                        <Label text="!">
                            <font>
                                <Font size="27.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox fx:id="customerVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../../../Images/icons/app/014-cinema.png"/>
                                    </image>
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                           </VBox.margin>
                        </ImageView>
                                <Label fx:id="customerLabelVBox" text="Customers"/>
                     </children>
                     <HBox.margin>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </HBox.margin>
                     <padding>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </padding>
                  </VBox>
                  <VBox fx:id="moviesVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                               <Image url="@../../../../../Images/icons/app/006-negative-film.png"/>
                           </image>
                           <VBox.margin>
                               <Insets bottom="5.0"/>
                           </VBox.margin>
                        </ImageView>
                         <Label fx:id="movieLabelVBox" text="Movies"/>
                     </children>
                     <HBox.margin>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </HBox.margin>
                     <padding>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </padding>
                  </VBox>
                  <VBox fx:id="rentalsVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                               <Image url="@../../../../../Images/icons/app/005-softdrink.png"/>
                           </image>
                           <VBox.margin>
                               <Insets bottom="5.0"/>
                           </VBox.margin>
                        </ImageView>
                         <Label text="Rentals"/>
                     </children>
                     <HBox.margin>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </HBox.margin>
                     <padding>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </padding>
                  </VBox>
                  <VBox fx:id="exitVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                               <Image url="@../../../../../Images/icons/app/007-clapperboard.png"/>
                           </image>
                           <VBox.margin>
                               <Insets bottom="5.0"/>
                           </VBox.margin>
                        </ImageView>
                         <Label text="Log-Out"/>
                     </children>
                     <padding>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </padding>
                     <HBox.margin>
                         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
