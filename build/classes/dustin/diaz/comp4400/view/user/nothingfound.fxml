<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="dustin.diaz.comp4400.controller.NothingFoundController">
    <center>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <HBox>
                            <children>
                                <HBox alignment="BOTTOM_LEFT">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#goBack" prefHeight="45.0"
                                                prefWidth="170.0" text="Return Home">
                                            <graphic>
                                                <ImageView fitHeight="48.0" fitWidth="29.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../../../../Images/icons/backarrow.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="641.0">
                                    <children>
                                        <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#goRent"
                                                prefHeight="45.0" prefWidth="170.0" text="Rent A Movie">
                                            <graphic>
                                                <ImageView fitHeight="48.0" fitWidth="29.0"
                                                           nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../../../../Images/icons/backarrow.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <ImageView nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../../../Images/icons/nothingfound-2-nobck.png"/>
                            </image>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </ImageView>
                        <Label text="Nothing To Show" textFill="#3c3c3c">
                            <font>
                                <Font name="System Bold" size="45.0"/>
                            </font>
                        </Label>
                        <Label text="You haven't rented any movies yet." textFill="#979797">
                            <font>
                                <Font name="System Italic" size="29.0"/>
                            </font>
                        </Label>
                    </children>
                    <opaqueInsets>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
